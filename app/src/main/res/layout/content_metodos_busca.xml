<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="76dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/metodos_busca_localizacao_atual"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Localização Atual"
            android:textSize="22dp"
            android:textAlignment="center"
            android:background="@color/colorGreen"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/metodos_busca_cep"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Informar CEP"
            android:background="@color/colorDefault"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textColor="@color/colorGreen"
            android:allowUndo="false"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Buscar pelo endereço do cadastro"
            android:id="@+id/metodos_busca_end_cadastro"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textColor="#3765fe"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:singleLine="false"
            android:allowUndo="false" />

    </LinearLayout>

</LinearLayout>

